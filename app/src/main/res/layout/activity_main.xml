<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
<!--    header-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_utama"/>

<!--isi    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_utama"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ly_pesan"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="25dp">
            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/btn_pesan"
                android:src="@drawable/ticket"
                android:background="@drawable/circle_blue_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="PESAN \nTIKET"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ly_konser"
            android:layout_toRightOf="@id/ly_pesan"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="25dp">
            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/btn_konser"
                android:src="@drawable/microphone"
                android:background="@drawable/circle_blue_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="DAFTAR\nKONSER"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ly_off"
            android:layout_below="@id/ly_pesan"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="25dp">
            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/btn_off"
                android:src="@drawable/off"
                android:background="@drawable/circle_blue_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="OFFICIAL"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ly_info"
            android:layout_toRightOf="@id/ly_off"
            android:layout_below="@id/ly_konser"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="25dp">
            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/btn_info"
                android:src="@drawable/info"
                android:background="@drawable/circle_blue_button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="INFORMASI"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>